---
interface Props {
  categories: string[];
  currentPath: string;
  plural?: boolean;
  basePath: string;
}

const { categories, currentPath, plural, basePath } = Astro.props;
---

<div class="categories">
  <a href={`/${basePath}`} class:list={["category-link", { active: currentPath === `/${basePath}` }]}> All </a>
  {
    categories.map((category) => (
      <a
        href={`/${basePath}/${category}`}
        class:list={["category-link", { active: currentPath === `/${basePath}/${category}` }]}
      >
        {category + (plural ? "s" : "")}
      </a>
    ))
  }
</div>

<style>
  .categories {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .category-link {
    color: var(--text-muted);
    font-size: var(--text-sm);
    border: 1px solid var(--border-color);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    text-decoration: none;
    transition:
      background var(--transition-base),
      color var(--transition-base);
  }

  .category-link:hover,
  .category-link.active {
    background: var(--hover-bg);
    color: var(--text-color);
  }
</style>
