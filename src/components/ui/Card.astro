---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

<article class:list={["card", className]}>
  {
    href ? (
      <a {href}>
        <slot />
      </a>
    ) : (
      <slot />
    )
  }
</article>

<style>
  .card {
    transition: transform var(--transition-base);
  }

  .card:hover {
    transform: translateY(-2px);
  }

  a {
    text-decoration: none;
    color: inherit;
  }
</style>
